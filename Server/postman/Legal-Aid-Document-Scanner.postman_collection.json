{
  "info": {
    "name": "Legal Aid - Document Scanner API",
    "description": "Complete API collection for testing the AI document scanner feature",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "_postman_id": "legal-aid-document-scanner",
    "version": "1.0.0"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{jwt_token}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3000",
      "type": "string"
    },
    {
      "key": "jwt_token",
      "value": "",
      "type": "string"
    },
    {
      "key": "document_id",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"testuser@example.com\",\n  \"password\": \"password123\",\n  \"birthday\": \"1990-01-01\",\n  \"genderSpectrum\": \"prefer-not-to-say\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/register",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "register"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('jwt_token', response.token);",
                  "    console.log('JWT Token saved:', response.token);",
                  "}"
                ]
              }
            }
          ]
        },
        {
          "name": "Login User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"testuser@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/login",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "login"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('jwt_token', response.token);",
                  "    console.log('JWT Token saved:', response.token);",
                  "}"
                ]
              }
            }
          ]
        }
      ]
    },
    {
      "name": "Document Management",
      "item": [
        {
          "name": "Upload Document",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "document",
                  "type": "file",
                  "src": [],
                  "description": "Upload an image file (JPG, PNG, WEBP, TIFF, BMP) or PDF"
                },
                {
                  "key": "documentType",
                  "value": "legal_document",
                  "type": "text",
                  "description": "Options: legal_document, contract, certificate, identification, other"
                },
                {
                  "key": "language",
                  "value": "eng",
                  "type": "text",
                  "description": "OCR language code (eng, spa, fra, deu, etc.)"
                }
              ]
            },
            "url": {
              "raw": "{{base_url}}/api/documents/upload",
              "host": ["{{base_url}}"],
              "path": ["api", "documents", "upload"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('document_id', response.data.documentId);",
                  "    console.log('Document ID saved:', response.data.documentId);",
                  "}"
                ]
              }
            }
          ]
        },
        {
          "name": "Get All Documents",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/documents?page=1&limit=10&sortBy=createdAt&sortOrder=desc",
              "host": ["{{base_url}}"],
              "path": ["api", "documents"],
              "query": [
                {
                  "key": "page",
                  "value": "1",
                  "description": "Page number (default: 1)"
                },
                {
                  "key": "limit",
                  "value": "10",
                  "description": "Items per page (default: 10)"
                },
                {
                  "key": "documentType",
                  "value": "",
                  "description": "Filter by document type",
                  "disabled": true
                },
                {
                  "key": "status",
                  "value": "",
                  "description": "Filter by OCR status (pending, processing, completed, failed)",
                  "disabled": true
                },
                {
                  "key": "sortBy",
                  "value": "createdAt",
                  "description": "Sort field (default: createdAt)"
                },
                {
                  "key": "sortOrder",
                  "value": "desc",
                  "description": "Sort order: asc or desc (default: desc)"
                }
              ]
            }
          }
        },
        {
          "name": "Get Document Details",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/documents/{{document_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "documents", "{{document_id}}"]
            }
          }
        },
        {
          "name": "Check Processing Status",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/documents/{{document_id}}/status",
              "host": ["{{base_url}}"],
              "path": ["api", "documents", "{{document_id}}", "status"]
            }
          }
        },
        {
          "name": "Get Extracted Text",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/documents/{{document_id}}/text",
              "host": ["{{base_url}}"],
              "path": ["api", "documents", "{{document_id}}", "text"]
            }
          }
        },
        {
          "name": "Download Document File",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/documents/{{document_id}}/file",
              "host": ["{{base_url}}"],
              "path": ["api", "documents", "{{document_id}}", "file"]
            }
          }
        },
        {
          "name": "Reprocess Document",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{}"
            },
            "url": {
              "raw": "{{base_url}}/api/documents/{{document_id}}/reprocess",
              "host": ["{{base_url}}"],
              "path": ["api", "documents", "{{document_id}}", "reprocess"]
            }
          }
        },
        {
          "name": "Delete Document",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/documents/{{document_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "documents", "{{document_id}}"]
            }
          }
        }
      ]
    },
    {
      "name": "Search & Analytics",
      "item": [
        {
          "name": "Search Documents",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/documents/search?q=contract&type=legal_document&page=1&limit=10",
              "host": ["{{base_url}}"],
              "path": ["api", "documents", "search"],
              "query": [
                {
                  "key": "q",
                  "value": "contract",
                  "description": "Search term (required)"
                },
                {
                  "key": "type",
                  "value": "legal_document",
                  "description": "Document type filter (optional)"
                },
                {
                  "key": "page",
                  "value": "1",
                  "description": "Page number (default: 1)"
                },
                {
                  "key": "limit",
                  "value": "10",
                  "description": "Items per page (default: 10)"
                }
              ]
            }
          }
        },
        {
          "name": "Get Processing Statistics",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/documents/stats",
              "host": ["{{base_url}}"],
              "path": ["api", "documents", "stats"]
            }
          }
        },
        {
          "name": "Get Supported Languages",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/documents/languages",
              "host": ["{{base_url}}"],
              "path": ["api", "documents", "languages"]
            }
          }
        }
      ]
    },
    {
      "name": "Test Examples",
      "item": [
        {
          "name": "Upload Contract (Spanish)",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "document",
                  "type": "file",
                  "src": [],
                  "description": "Upload a Spanish contract document"
                },
                {
                  "key": "documentType",
                  "value": "contract",
                  "type": "text"
                },
                {
                  "key": "language",
                  "value": "spa",
                  "type": "text"
                }
              ]
            },
            "url": {
              "raw": "{{base_url}}/api/documents/upload",
              "host": ["{{base_url}}"],
              "path": ["api", "documents", "upload"]
            }
          }
        },
        {
          "name": "Upload Certificate (French)",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "document",
                  "type": "file",
                  "src": [],
                  "description": "Upload a French certificate"
                },
                {
                  "key": "documentType",
                  "value": "certificate",
                  "type": "text"
                },
                {
                  "key": "language",
                  "value": "fra",
                  "type": "text"
                }
              ]
            },
            "url": {
              "raw": "{{base_url}}/api/documents/upload",
              "host": ["{{base_url}}"],
              "path": ["api", "documents", "upload"]
            }
          }
        },
        {
          "name": "Search for 'Terms and Conditions'",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/documents/search?q=terms and conditions",
              "host": ["{{base_url}}"],
              "path": ["api", "documents", "search"],
              "query": [
                {
                  "key": "q",
                  "value": "terms and conditions"
                }
              ]
            }
          }
        }
      ]
    }
  ]
}